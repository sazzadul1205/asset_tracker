company: {
  _id: ObjectId,                // MongoDB unique ID
  name: string,                 // Company name
  contact: {                    // Contact details
    email: string,              // Company email
    phone: string,              // Company phone
    address: string,            // Company address
    logo: string                // Company logo URL
  },
  settings: {                   // Company settings
    currency: {
      code: string,             // Currency code, e.g., USD, BDT
      location: string,         // Currency position: before/after amount
      fractionalDigits: number  // Number of decimal places
    },
    dateFormat: string           // Preferred date format, e.g., YYYY-MM-DD
  },
  metadata: {
    createdAt: datetime,        // Record creation timestamp
    updatedAt: datetime         // Record last update timestamp
  }
}

departments: {
  _id: ObjectId,
  info: {
    name: string,               // Department name
    description: string,        // Description of department
    status: string,             // active, inactive, archived
    icon: string,               // UI icon name or URL
    iconBgColor: string         // Icon background color (hex, RGB, CSS)
  },
  manager: {
    userId: ObjectId            // Reference to the department manager (users._id)
  },
  stats: {
    employeeCount: number,      // Number of employees in department
    budget: number              // Department budget
  },
  metadata: {
    createdAt: datetime,
    updatedAt: datetime
  }
}

users: {
  _id: ObjectId,
  personal: {
    name: string,
    phone: string,
    hireDate: date,             // Date of joining
    status: string              // active, inactive, terminated
    userId: string,
  },
  credentials: {
    email: string,
    password: string,
    oldPassword: string,        // Optional, for password history
    lastLogin: datetime
  },
  employment: {
    departmentId: ObjectId,     // Reference to departments._id
    position: string,
    role: string,               // e.g., Admin, Manager, Employee
    lastUpdatedBy: ObjectId     // Reference to another user (audit)
  },
  metadata: {
    createdAt: datetime,
    updatedAt: datetime
  }
}

assetCategories: {
  _id: ObjectId,
  info: {
    name: string,
    description: string,
    status: string,             // active, inactive, archived
    icon: string,               // UI icon name or URL
    iconBgColor: string         // Background color for UI
  },
  depreciation: {
    averageRate: number,        // Depreciation percentage
    defaultWarrantyMonths: number
  },
  metadata: {
    createdAt: datetime,
    updatedAt: datetime
  }
}

assets: {
  _id: ObjectId,
  identification: {
    tag: string,                // Asset unique tag/code
    name: string,
    categoryId: ObjectId        // Reference to assetCategories._id
  },
  assignment: {
    userId: ObjectId            // Reference to users._id for current assignment
  },
  purchase: {
    cost: number,
    purchasedById: ObjectId,    // Reference to users._id who purchased
    warrantyExpiry: date
  },
  details: {
    serialNumber: string,
    model: string,
    brand: string,
    notes: string
  },
  metadata: {
    createdAt: datetime,
    updatedAt: datetime
  }
}

requests: {
  _id: ObjectId,
  assetId: ObjectId,            // Reference to assets._id
  type: string,                 // Request type: Assign, Return, Repair, Retire, Transfer, Create, Update, Dispose
  priority: string,             // Low, Medium, High, Urgent
  description: string,          // Request description or reason
  expectedCompletion: date,
  participants: {
    requestedById: ObjectId,    // User who requested
    requestedToId: ObjectId,    // User or department manager responsible
    departmentId: ObjectId      // Reference to departments._id
  },
  metadata: {
    createdAt: datetime,
    updatedAt: datetime,
    status: string              // Pending, In Progress, Completed, Rejected
  }
}

logs: {
  _id: ObjectId,                 // MongoDB unique ID
  action: {
    type: string,                // e.g., Create, Update, Delete, Assign, Login, Request, Error
    collection: string,          // e.g., users, assets, requests
    documentId: ObjectId,        // affected document ID
    description: string,         // human-readable explanation
    status: string               // Success, Failed, Warning
  },
  performedBy: {
    userId: ObjectId,            // reference to users._id
    ipAddress: string,           // optional: client IP
    device: string               // optional: device/browser info
  },
  dataSnapshot: {
    before: object,              // optional: document before change
    after: object                // optional: document after change
  },
  metadata: {
    timestamp: datetime          // when the action occurred
  }
}

